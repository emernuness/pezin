# App
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001
WEB_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://packdopezin:packdopezin@localhost:5432/packdopezin

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# ==========================================
# GATEWAY AGNOSTIC PAYMENT SYSTEM (PIX)
# ==========================================

# Gateway Configuration
# Options: suitpay | ezzepay | voluti | mock
# Use 'mock' for local development without real gateway credentials
ENV_CURRENT_GATEWAY=mock

# Mock Gateway (for local development)
MOCK_AUTO_APPROVE=true
MOCK_APPROVAL_DELAY_MS=3000

# SuitPay
SUITPAY_API_KEY=your_suitpay_api_key
SUITPAY_API_URL=https://api.suitpay.app
SUITPAY_WEBHOOK_SECRET=your_suitpay_webhook_secret

# EzzePay
EZZEPAY_API_KEY=your_ezzepay_api_key
EZZEPAY_API_URL=https://api.ezzepay.com.br
EZZEPAY_WEBHOOK_SECRET=your_ezzepay_webhook_secret

# Voluti
VOLUTI_API_KEY=your_voluti_api_key
VOLUTI_API_URL=https://api.voluti.com.br
VOLUTI_WEBHOOK_SECRET=your_voluti_webhook_secret
VOLUTI_CLIENT_ID=your_voluti_client_id

# Financial Settings
PLATFORM_FEE_PERCENT=20
ANTI_FRAUD_HOLD_DAYS=14
MIN_PAYOUT_AMOUNT=5000

# Cloudflare R2
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_ACCESS_KEY=your_r2_access_key
R2_SECRET_KEY=your_r2_secret_key
R2_BUCKET=packdopezin
R2_PUBLIC_URL=https://cdn.packdopezin.com

# Media Token & CDN Worker
# Secret for signing media access tokens (must be same in Worker)
MEDIA_TOKEN_SECRET=your-256-bit-secret-for-media-tokens-change-in-production
MEDIA_TOKEN_EXPIRES_IN=3600
# URL of the Cloudflare Worker CDN
CDN_WORKER_URL=http://localhost:8787
# Internal API key for Worker-to-Backend communication
WORKER_INTERNAL_API_KEY=your-internal-api-key-for-worker

# Email (optional for PR-1, can mock)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=xxx
# SMTP_PASS=xxx
